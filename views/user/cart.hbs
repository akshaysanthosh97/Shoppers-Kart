<div class="container mt-5">
  {{> navbar}}
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">Your Shopping Cart</h1>
      <div class="cart-items-container">
      {{#if cartItems.length}}
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr data-product-id="{{this._id}}">
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each cartItems}}
                    <tr data-product-id="{{this._id}}">
                      <td>
                        <div class="d-flex align-items-center">
                          <img src="{{this.product.image}}" alt="{{this.product.name}}" class="img-thumbnail me-3" style="width: 60px; height: 60px;">
                          <div>
                            <h6 class="mb-0">{{this.product.name}}</h6>
                            <small class="text-muted">{{this.product.category}}</small>
                          </div>
                        </div>
                      </td>
                      <td>{{this.product.price}}</td>
                      <td>
                        <div class="input-group quantity-controls">
                          <button class="btn btn-outline-secondary btn-sm" onclick="cartManager.updateQuantity('{{this._id}}', -1)">
                            <i class="bi bi-dash"></i>
                          </button>
                          <span class="quantity-value px-3">{{this.quantity}}</span>
                          <button class="btn btn-outline-secondary btn-sm" onclick="cartManager.updateQuantity('{{this._id}}', 1)">
                            <i class="bi bi-plus"></i>
                          </button>
                        </div>
                      </td>
                      <td>${{multiply this.quantity this.product.price}}</td>
                      <td>
                        <button class="btn btn-outline-danger btn-sm" onclick="cartManager.removeFromCart('{{this._id}}')">
                          <i class="bi bi-trash"></i>
                        </button>
                      </td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-6 offset-md-6">
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title">Order Summary</h5>
                <div class="d-flex justify-content-between mb-2">
                  <span>Subtotal:</span>
                  <span>${{totalAmount}}</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                  <span>Shipping:</span>
                  <span>Free</span>
                </div>
                <hr>
                <div class="d-flex justify-content-between mb-3">
                  <strong>Total:</strong>
                  <strong>${{totalAmount}}</strong>
                </div>
                <button class="btn btn-primary w-100">Proceed to Checkout</button>
              </div>
            </div>
          </div>
        </div>
      {{else}}
        <div class="text-center py-5">
          <i class="bi bi-cart-x" style="font-size: 4rem;"></i>
          <h3 class="mt-3">Your cart is empty</h3>
          <p class="text-muted">Looks like you haven't added any products to your cart yet.</p>
          <a href="/users/view-products" class="btn btn-primary mt-3">
            <i class="bi bi-arrow-left me-2"></i>Continue Shopping
          </a>
        </div>
      {{/if}}
    </div>
  </div>
</div>