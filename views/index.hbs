<div class="container mt-4">
  {{> navbar}}
  <h1 class="display-4 mt-4 hero-title">{{title}}</h1>
  <p class="lead">Welcome to {{title}}</p>

  <section class="products my-5">
    <h2 class="mb-4">Featured Products</h2>
    <div class="product-grid">
      {{#each products}}
        {{> product-card id=this.id name=this.name price=this.price description=this.description image=this.image badge=this.badge}}
      {{/each}}
    </div>
  </section>
</div>

